<h1 > Listing presentations </h1 >

<table > 
  <thead > 
    <tr > 
      <th > Presentation </th > 
      <th > Description </th > 
      <th colspan =" 3" > </th > 
    </tr > </thead > 

    <tbody > <% @presentations.each do | presentation | %> 
     <tr > 
        <td > <%= file_tag presentation.file.url(:medium) %> </td > 
        <td > <%= link_to 'Show', presentation %> </td > 
        <td > <%= link_to 'Edit', edit_presentation_path( presentation) %> </td > 
        <td > <%= link_to 'Destroy', presentation, method: :delete, data: { confirm: 'Are you 20 sure?' } %> 
        </td > 
      </tr >
      <% end %> 
    </tbody > 
</table > 

<br/ >
<%= link_to 'New Presentation', new_presentation_path %>
