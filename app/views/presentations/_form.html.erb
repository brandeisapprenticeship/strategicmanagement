<%= form_for @presentation, :html => {:multipart => true} do |f| %>
  <% if @presentation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@presentation.errors.count, "error") %> prohibited this presentation from being saved:</h2>

      <ul>
      <% @presentation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="form-group">
    <%= f.label :title, class:'control-label' %><br>
    <%= f.text_field :title, class:'form-control'%>
  </div>

       


     <% unless @presentation.slides.blank? %>

        <div class='form-group'>
          <label class='conrol-label'>Current slides</label>
            <iframe class='pretty-frame' id='presentation' src="<%= @presentation.slides.url %>" frameborder="0" allowfullscreen="true" mozallowfullscreen="true" webkitallowfullscreen="true"></iframe>
        </div>

    <% end %>
    <div class="form-group">

        <%= f.label :slides, @presentation.slides.blank? ? "Slides" : "Change slides", class:'control-label' %><br>
        <%= f.file_field :slides, class:'form-control'%>
      </div>
  
  <div class="form-group">
    <%= f.submit class:'btn btn-primary' %>
  </div>
<% end %>
