<ol class='breadcrumb'>
	<li><%= link_to "Presentations", presentations_path %></li>
	<li class='active'><%= @presentation.title %></li>
</ol>
<div class='page-header'>

	<h1>
		<%= @presentation.title %>
		<% if current_user.admin? %>
			<small><%= link_to 'Edit', edit_presentation_path(@presentation) %></small>
		<% end %>
	</h1>
	 
	<p>
		
		<%= link_to 'Download presentation', @presentation.slides.url, :download=>@presentation.title+".pdf", class:'btn btn-info' %>

	</p>
</div>




