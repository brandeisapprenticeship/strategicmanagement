<div class='page-header'>
	<h1>Presentations</h1>
</div>

<p id="notice"><%= notice %></p>


<% if current_user.admin %>
<%= link_to 'New Presentation', new_presentation_path %> <br>
<br>
<%= link_to 'Show All Responses for the class', list_presentations_path %> <br>
<br>
<%= link_to 'User Profiles', responses_userlist_path%> 
<br>
<% end %>



<table class='table'>
	<thead>
		<tr>
			<th>Title</th>
			<th>Actions</th>
		</tr>
	</thead>

	<tbody>
		<% @presentations.each do |presentation| %>
		<tr>

			<td><%= presentation.title %></td>
			<td> <%= link_to 'Download', presentation.slides.url, :download=>presentation.title+".pdf", :class=>'btn btn-success' %>
			<%= link_to 'Discussions', presentation_path(presentation), class: 'btn btn-info' %>
			<% if current_user.admin %>
			<%= link_to 'Edit', edit_presentation_path(presentation), class: 'btn btn-warning' %>
			<%= link_to 'Delete', presentation, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
			<% end %>
			</td>
		</tr>
		<% end %> 
	</tr>
</tbody>
</table>
<br>



