<div class='page-header'>
	<h1>Site settings</h1>
</div>
<p id="notice"><%= notice %></p>
<div class='row'>
	<div class='col-md-12'>
	<%= form_for :settings, url: save_settings_path do |f| %>
			<div class='form-group'>
				<%= f.label :site_title, "Site title", :class=>'control-label' %>

				<%= f.text_field :site_title, :value => @site_title, :class=>'form-control' %>

			</div>
			<div class='form-group'>
				<%= f.label :class_name, "Class name", :class=>'control-label' %>

				<%= f.text_field :class_name, :value => @class_name, :class=>'form-control' %>

			</div>
			<div class='form-group'>
				<%= f.label :about_text, "&quot;About this class&quot; page text".html_safe, :class=>'control-label' %>
				<%= f.bootsy_area :about_text, class:'form-control', value: @about_text, rows: 8 %>

			</div>
			<div class='form-group'>
				<%= f.submit "save", :class=>'btn btn-primary' %>

			</div>
		<% end %>
	</div>
</div>